{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"composite": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"strict": true
	},
	"include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "vite.config.ts"],
	"extends": "@tsconfig/svelte/tsconfig.json"
}
